= form_for(@actor, url: actor_path, method: 'patch') do |f|
  %table
    %tr
      %td
        Actor Name
      %td
        = f.text_field :name_actor
    %tr
      %td
        Birth Day
      %td
        = f.text_field :birth_day
    %tr
      %td
        Country
      %td
        = f.text_field :country
    %tr
      %td
        Avatar
      %td
        = f.file_field :avatar
    %tr
      %td{colspan: 2}
        = f.submit :Edit


